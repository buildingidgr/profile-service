{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@shared/*": ["src/shared/*"],
      "@config": ["src/shared/config"],
      "@utils/*": ["src/shared/utils/*"],
      "@services/*": ["src/services/*"],
      "../utils/*": ["src/shared/utils/*"],
      "../config": ["src/shared/config"],
      "../services/*": ["src/services/*"],
      "./logger": ["src/shared/utils/logger"],
      "./database": ["src/shared/utils/database"],
      "./errors": ["src/shared/utils/errors"],
      "./config": ["src/shared/config"],
      "./PreferencesService": ["src/services/PreferencesService"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "types": [
      "node",
      "express",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

