{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@api/*": ["api/*"],
      "@consumer/*": ["consumer/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"]
    },
    "types": ["node", "express", "cors", "express-rate-limit", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

